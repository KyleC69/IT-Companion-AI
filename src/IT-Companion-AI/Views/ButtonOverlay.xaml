<?xml version="1.0" encoding="utf-8"?>

<UserControl
    x:Class="ITCompanionAI.Views.ButtonOverlay"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:ITCompanionAI.Converters"
    xmlns:viewModels="using:ITCompanionAI.ViewModels" >
    <UserControl.Resources>
        <converters:BooleanNegationConverter x:Key="BooleanNegationConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        



    </UserControl.Resources>
    <UserControl.DataContext>
        <viewModels:ButtonViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="150" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        <Border BorderThickness="3" Grid.Row="0" BorderBrush="CadetBlue" Padding="5" Margin="5" CornerRadius="30">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Spacing="7"
                        MinHeight="175">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Spacing="7">
          
                    
                    <Button Content="Harvest API" Width="150" Height="40" Command="{Binding HarvestApiCommand}"
                            Background="{ThemeResource ButtonBackgroundThemeBrush}"
                            IsEnabled="{Binding CanSend}" />
                    
                    
                    
                    <Button Content="Ingest Local Code" Width="150" Height="40"
                            Command="{Binding IngestLocalCodeCommand}"
                            Background="{ThemeResource ButtonBackgroundThemeBrush}"
                            IsEnabled="{Binding CanSend}" />
                   
                    
                    <Button Content="Get MS Learn" Width="150" Height="40" Command="{Binding GetMSLearnCommand}"
                            Background="{ThemeResource ButtonBackgroundThemeBrush}"
                            IsEnabled="{Binding CanSend}" />
                 
                    
                    <Button Content="Start Ingesting" Width="150" Height="40" Command="{Binding HarvestDocsCommand}"
                            Background="{ThemeResource ButtonBackgroundThemeBrush}" 
                            IsEnabled="{Binding CanSend}" />
                </StackPanel>

                <TextBox x:Name="InputTextBox"
                         Text="{Binding IngestTarget, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Height="50"
                         MinWidth="500" HorizontalAlignment="Center" PlaceholderText="Url to ingest....." />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>